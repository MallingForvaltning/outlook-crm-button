<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">
  <Id>8b6a1a7b-0b9d-4f9e-9b0b-crm-forward-demo</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Malling &amp; Co</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Send to CRM"/>
  <Description DefaultValue="Forward selected email to Alfred Robot."/>
  <IconUrl DefaultValue="https://via.placeholder.com/32"/>
  <HighResolutionIconUrl DefaultValue="https://via.placeholder.com/80"/>
  <SupportsPinning>false</SupportsPinning>
  <Hosts><Host Name="Mailbox"/></Hosts>
  <Requirements><Sets><Set Name="Mailbox" MinVersion="1.6"/></Sets></Requirements>
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Hosts>
      <Host xsi:type="MailHost">
        <Runtimes>
          <Runtime resid="Commands.Url" lifetime="short"/>
        </Runtimes>
        <ExtensionPoint xsi:type="MessageReadCommandSurface">
          <OfficeTab id="TabDefault">
            <Group id="grp.crm" label="CRM">
              <Control xsi:type="Button" id="btn.forward.to.crm"
                       label="Send to CRM"
                       icon="https://via.placeholder.com/32"
                       onAction="forwardToCrm">
                <Supertip>
                  <Title resid="res.title"/>
                  <Description resid="res.desc"/>
                </Supertip>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </Host>
    </Hosts>
    <Resources>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://mallingforvaltning.github.io/outlook-crm-button/commands.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="res.title" DefaultValue="Send to CRM"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="res.desc" DefaultValue="Opens a ready-to-send message to Alfred Robot."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
